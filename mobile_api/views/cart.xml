<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================
        Main Menu + Action
    ============================= -->
    <menuitem id="menu_mobile_cart_root"
              name="Mobile Cart"
              sequence="10"
              web_icon="mobile_api,static/description/icon.png"
              />

    <menuitem id="menu_mobile_cart_management"
              name="Shopping Carts"
              parent="menu_mobile_cart_root"
              sequence="1"/>

    <!-- Action for Mobile Cart -->
    <record id="action_mobile_cart" model="ir.actions.act_window">
        <field name="name">Shopping Carts</field>
        <field name="res_model">mobile.cart</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shopping cart here
            </p>
        </field>
    </record>

    <menuitem id="menu_mobile_cart"
              name="Carts"
              parent="menu_mobile_cart_management"
              action="action_mobile_cart"
              sequence="1"/>

    <!-- ============================
        Tree View (mobile.cart)
    ============================= -->
    <record id="view_mobile_cart_tree" model="ir.ui.view">
        <field name="name">mobile.cart.tree</field>
        <field name="model">mobile.cart</field>
        <field name="arch" type="xml">
            <tree string="Shopping Carts">
                <field name="user_id"/>
                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </tree>
        </field>
    </record>

    <!-- ============================
        Form View (mobile.cart)
    ============================= -->
    <record id="view_mobile_cart_form" model="ir.ui.view">
        <field name="name">mobile.cart.form</field>
        <field name="model">mobile.cart</field>
        <field name="arch" type="xml">
            <form string="Shopping Cart">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="total_amount" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Cart Lines">
                            <field name="cart_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================
        Tree View (mobile.cart.line)
    ============================= -->
    <record id="view_mobile_cart_line_tree" model="ir.ui.view">
        <field name="name">mobile.cart.line.tree</field>
        <field name="model">mobile.cart.line</field>
        <field name="arch" type="xml">
            <tree string="Cart Lines">
                <field name="cart_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="subtotal"/>
            </tree>
        </field>
    </record>

    <!-- ============================
        Form View (mobile.cart.line)
    ============================= -->
    <record id="view_mobile_cart_line_form" model="ir.ui.view">
        <field name="name">mobile.cart.line.form</field>
        <field name="model">mobile.cart.line</field>
        <field name="arch" type="xml">
            <form string="Cart Line">
                <sheet>
                    <group>
                        <field name="cart_id"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="unit_price"/>
                        <field name="subtotal" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
